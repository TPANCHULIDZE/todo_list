<form method="post" action="/users/todos/<%= @todo.id %>/lists/delete/<%= @list.id %>">
  <input  id="hidden" type="hidden" name="_method" value="delete">
 
  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <h2> Delete <%= @list.description %></h2>
  </div>
  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <button type="submit" class="btn btn-primary btn-lg">Delete</button>
  </div>
  
  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <a class="btn btn-primary btn-lg" href="/users/todos/<%= @todo.id %>/<%= START_PAGE %>/lists">Back</a>
  </div>

</form>
