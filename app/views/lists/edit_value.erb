<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <% if @list.is_end %>
                <% value = "No" %>
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">list is not compited?</p>
                <% else %>
                <% value = "Yes" %>
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">list is compited?</p>
                <% end %>
                <form class="mx-1 mx-md-4" method="POST" action="/users/todos/<%= @todo.id %>/lists/update/value/<%= @list.id %>">
                  <input  id="hidden" type="hidden" name="_method" value="patch">

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg"><%= value %></button>
                  </div>

                </form>
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <a class="btn btn-primary btn-lg" href="/users/todos/<%= @todo.id %>/<%= START_PAGE %>/lists">Back</a>
                </div>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>